{
  "name": "@progressdb/node",
  "version": "0.2.0",
  "description": "ProgressDB backend SDK (Node.js, TypeScript) - wraps frontend SDK with automatic signature generation and caching",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "test:unit": "vitest --dir tests/unit",
    "test:integration": "vitest --dir tests/integration"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE*"
  ],
  "keywords": [
    "progressdb",
    "sdk",
    "backend",
    "typescript"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@progressdb/js": "^0.2.2"
  },
  "devDependencies": {
    "msw": "^1.2.1",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  }
}
